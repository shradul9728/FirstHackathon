<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EchoGuard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/echo_blue</item>
        <item name="colorPrimaryDark">@color/echo_blue_dark</item>
        <item name="colorAccent">@color/guard_green</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/echo_blue_dark</item>
        
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Theme.EchoGuard" parent="Base.Theme.EchoGuard" />
</resources>